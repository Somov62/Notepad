<Window x:Class="Notepad.GoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="Перейти..." Height="150" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Label Content="Перейти на строку:" Margin="10, 0"/>
            <TextBox x:Name="txtRowNumber" Margin="10, 0" Height="27"/>
            <Button Content="Перейти" Height="25" Width="100" Margin="10, 10" HorizontalAlignment="Left" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
